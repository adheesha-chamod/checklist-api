{
  "openapi": "3.1.0",
  "info": {
    "title": "Checklist API",
    "version": "1.0.0",
    "summary": "OpenAPI Specification for Checklist API",
    "description": "OpenAPI Specification for Checklist API developed using OpenAPI Specification v3.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/checklist-api/v1",
      "description": "Local Checklist API Server"
    }
  ],
  "tags": [
    {
      "name": "Checklists",
      "description": "Operations related to checklists"
    },
    {
      "name": "List Items",
      "description": "Operations related to list items"
    }
  ],
  "paths": {
    "/check-lists": {
      "post": {
        "tags": ["Checklists"],
        "summary": "Add a new checklist",
        "operationId": "addChecklist",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckList"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Checklist created successfully"
          }
        }
      },
      "get": {
        "tags": ["Checklists"],
        "summary": "Get all checklists",
        "operationId": "getChecklists",
        "responses": {
          "200": {
            "description": "Checklists retrieved Successfully"
          }
        }
      }
    },
    "/check-lists/{id}": {
      "get": {
        "tags": ["Checklists"],
        "summary": "Find a checklist",
        "operationId": "getChecklistById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the checklist to find",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Checklist retrieved Successfully"
          }
        }
      },
      "put": {
        "tags": ["Checklists"],
        "summary": "Update a checklist",
        "operationId": "updateChecklist",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the checklist to update",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckList"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Checklist updated successfully"
          }
        }
      },
      "delete": {
        "tags": ["Checklists"],
        "summary": "Delete a checklist",
        "operationId": "deleteChecklist",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the checklist to delete",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Checklist deleted successfully"
          }
        }
      }
    },
    "/list-items": {
      "post": {
        "tags": ["List Items"],
        "summary": "Add a list item",
        "operationId": "addListItem",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ListItem"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "List item created successfully"
          }
        }
      },
      "get": {
        "tags": ["List Items"],
        "summary": "Get a list item by checklist Id",
        "operationId": "getListItems",
        "parameters": [
          {
            "name": "checkListId",
            "in": "query",
            "required": true,
            "description": "ID of the checklist to retrive",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List Item retrieved Successfully"
          }
        }
      }
    },
    "/list-items/{id}": {
      "put": {
        "tags": ["List Items"],
        "summary": "Update a list item",
        "operationId": "updateListItem",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the list item to update",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ListItem"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "List item updated successfully"
          }
        }
      },
      "delete": {
        "tags": ["List Items"],
        "summary": "Delete a list item",
        "operationId": "deleteListItem",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the list item to delete",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "List item deleted successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CheckList": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["TO_DO", "IN_PROGRESS", "DONE", "REJECTED", "MARKED_DONE"]
          }
        },
        "required": ["name", "description", "status"]
      },
      "ListItem": {
        "type": "object",
        "properties": {
          "summary": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["TO_DO", "IN_PROGRESS", "DONE", "REJECTED", "MARKED_DONE"]
          },
          "dueDate": {
            "type": "string",
            "format": "date"
          },
          "checkListId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "required": ["summary", "status", "dueDate", "checkListId"]
      }
    }
  }
}